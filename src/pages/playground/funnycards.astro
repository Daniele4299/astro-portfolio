---
import Layout from "../../layouts/Layout.astro";
import BackPlaygroundCard from "../../components/BackPlaygroundCard.astro";
import RandomPokemonCard from "../../components/RandomPokemonCard.astro";
import DownloadCVCard from "../../components/DownloadCVCard.astro";

---

<script>
  import { stagger, spring, timeline, type TimelineDefinition } from "motion";
  import { loaderAnimation } from "../../lib/constants";
  const cards = document.querySelectorAll(".card");

  const sequence = [
    loaderAnimation,
    [
      cards,
      { y: ["40%", "0%"], opacity: [0, 1] },
      {
        at: "-0.1",
        duration: 0.4,
        delay: stagger(0.3),
        easing: spring({ velocity: 100, stiffness: 50, damping: 10 }),
      },
    ],
  ];

  timeline(sequence as TimelineDefinition);
</script>

<Layout
  title="Playground - Funny Cards"
  description="Just some funny cards"
>
  
  <main
  class="text-white m-auto p-2 grid gap-2 max-w-6xl overflow-hidden relative w-full sm:p-4 sm:gap-2 md:grid-cols-2 md:gap-3 md:p-6 lg:h-screen lg:grid-rows-8 lg:grid-cols-4 lg:gap-4 lg:max-h-[800px]"
  >
    <BackPlaygroundCard />
    <RandomPokemonCard />
    <RandomPokemonCard />
    <RandomPokemonCard />
    <RandomPokemonCard />
    <RandomPokemonCard />
    <RandomPokemonCard />
    <RandomPokemonCard />
  </main>
</Layout>


